# === MENUCOLOR ===
# lightcyan - good food
# orange - cursed (or under +0)
# yellow - not cursed
# lightgreen - blessed
# lightgreen - lichen corpse
# lightmagenta - lizard corpse
MENUCOLOR="ration"=lightcyan
MENUCOLOR="regeneration"=yellow
MENUCOLOR="lembas wafer"=lightcyan
MENUCOLOR="lichen corpse"=lightgreen
MENUCOLOR="lizard corpse"=lightmagenta

MENUCOLOR="[0-9]:[0-9]"=yellow
MENUCOLOR="+[1-9]"=yellow
MENUCOLOR="+[1-9] .* ([a-z]"=yellow&underline
MENUCOLOR="-[1-9]"=orange
MENUCOLOR="-[1-9] .* ([a-z]"=orange&underline

MENUCOLOR=" [Bb]lessed"=green
MENUCOLOR=" [Bb]lessed .* ([a-z]"=green&underline
MENUCOLOR=" [Hh]oly"=lightgreen
MENUCOLOR=" [Hh]oly .* ([a-z]"=lightgreen&underline
MENUCOLOR=" [Uu]ncursed"=yellow
MENUCOLOR=" [Uu]ncursed .* ([a-z]"=yellow&underline
MENUCOLOR=" [Cc]ursed"=orange
MENUCOLOR=" [Cc]ursed .* ([a-z]"=orange&underline
MENUCOLOR=" [Uu]nholy"=red
MENUCOLOR=" [Uu]nholy .* ([a-z]"=red&underline
MENUCOLOR=" [Ww]orthless"=brown

MENUCOLOR="safe"=yellow
MENUCOLOR="safe .* ([a-z]"=yellow,&underline

